                        android:layout_height="match_parent"
                        android:id="@+id/ct_val3"
                        android:layout_column="2"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
