<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    android:background="#3F606E">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1A3440"
        android:layout_gravity="right|center_horizontal"
        android:weightSum="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:id="@+id/backbutton"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_back"
                android:id="@+id/textView10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="컨트롤러"
                android:textAlignment="center"
                android:id="@+id/textView13"
                android:textColor="#92AA9D"
                android:textSize="16dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bluetooth"
                android:id="@+id/textView12"
                android:layout_marginRight="5dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#D1DABE"
            android:weightSum="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="즐겨찾기"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="16dp"
                        android:textColor="#3F606E" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_menu"
                        />
                </LinearLayout>


            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="20"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">

                    <TextView
                        android:text="X"
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Y"
                        android:id="@+id/textView7"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="BLINK"
                        android:id="@+id/textView8"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textView9"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/textView11"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="RED"
                        android:id="@+id/tn_6"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="GREEN"
                        android:id="@+id/tn_7"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="BLUE"
                        android:id="@+id/tn_8"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:id="@+id/seekBarValue">

                    <TextView
                        android:id="@+id/ct_val1"
                        android:layout_column="0"
                        android:layout_width="0dp"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ct_val2"
                        android:layout_column="1"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ct_val3"
                        android:layout_column="2"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ct_val4"
                        android:layout_column="3"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ct_val5"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ct_val6"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ct_val7"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ct_val8"
                        android:allowUndo="true"
                        android:autoText="false"
                        android:textColor="#3F606E"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center_horizontal" />

                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar_4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar_6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar_7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">

                    <com.icaynia.dmxario.VerticalSeekBar
                        android:id="@+id/ct_seekbar_8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mixer_fader_thumb9_128"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/custom_progress" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>