<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icaynia.dmxario.MainActivity_no"
    android:id="@+id/LinearLayout1"
    android:background="#505050"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:id="@+id/customActionBar"
        android:background="#1a1d1a"
        android:padding="3dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DMXArio"
            android:id="@+id/titleText"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:layout_weight="3"
            android:visibility="gone" />

        <DigitalClock
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/digitalClock"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TX : 0B"
            android:id="@+id/bluetoothTxByte"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:allowUndo="true"
            android:gravity="right"
            android:paddingRight="5dp"
            android:layout_columnWeight="1"
            android:layout_weight="3"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:background="@drawable/main_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="DMXArio"
                android:textColor="#FCFFF5"
                android:textSize="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="최고로 좋은 조명 효과를 만듭니다."
                android:textColor="#D1DABE"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="컨트롤러"
                    android:gravity="center|center_horizontal"
                    android:id="@+id/main_menu_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="씬 플레이"
                    android:gravity="center|center_horizontal"
                    android:id="@+id/main_menu_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:text="설정"
                    android:id="@+id/main_menu_3"/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>


